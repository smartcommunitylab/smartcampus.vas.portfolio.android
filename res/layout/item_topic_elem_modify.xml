<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_portfolio_height" >

    <!-- TextView that works as top label -->

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/item_label_background"
        android:padding="4dp"
        android:text="@string/app_name"
        android:textColor="@color/item_label_textcolor" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true" android:src="@drawable/square100x100"/>

    <!-- TextView that contains the object of topic -->

    <TextView
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/eye_button"
        android:layout_toRightOf="@+id/image"
        android:text="@string/app_name" />

    <!-- ImageButton for the icon of eye -->

    <ImageButton
        android:id="@+id/eye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/label"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_eye_selected" />

</RelativeLayout>
