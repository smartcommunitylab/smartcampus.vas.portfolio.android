<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_portfolio_height"
    android:minHeight="@dimen/item_portfolio_height" >

    <!-- ImageView that contains a cherry for Cherry on the Cake category -->

    <ImageView
        android:id="@+id/cherry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_cherry_selected" />

    <!-- TextView that contains the object of category -->

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/eye_button"
        android:layout_toRightOf="@+id/cherry"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textSize="@dimen/category_list_item" />

    <!-- ImageButton for the icon of eye -->

    <eu.trentorise.smartcampus.portfolio.widget.AdapterImageButton
        android:id="@+id/eye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:focusable="false"
        android:contentDescription="@null"
        android:src="@drawable/ic_eye_selected" />

</RelativeLayout>
